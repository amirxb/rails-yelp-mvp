<div class="container mt-4">
  <h1 class="mb-3"><%= @restaurant.name %></h1>

  <div class="mb-4">
    <p><strong>Address:</strong> <%= @restaurant.address %></p>
    <p><strong>Phone:</strong> <%= @restaurant.phone_number %></p>
    <p><strong>Category:</strong> <%= @restaurant.category.capitalize %></p>
  </div>

  <%= link_to "Back to Restaurants", restaurants_path, class: "btn btn-secondary mb-4" %>

  <hr>

  <h3 class="mt-4">Reviews</h3>
  <% @restaurant.reviews.each do |review| %>
    <div class="card mb-3">
      <div class="card-body">
        <h6 class="card-subtitle mb-2 text-muted">Rating: <%= review.rating %>/5</h6>
        <p class="card-text"><%= review.content %></p>
      </div>
    </div>
  <% end %>

  <h4 class="mt-4">Add a Review</h4>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <div class="form-group">
      <%= f.input :content, as: :text, input_html: { class: "form-control" } %>
      <%= f.input :rating, collection: 0..5, prompt: "Choose rating", input_html: { class: "form-control" } %>
    </div>

    <%= f.button :submit, "Submit Review", class: "btn btn-primary mt-3" %>
  <% end %>
</div>
