<div class="container mt-4">
  <h1 class="mb-4">Add a New Restaurant</h1>

  <%= simple_form_for @restaurant do |f| %>
    <div class="form-group">
      <%= f.input :name, input_html: { class: "form-control" } %>
      <%= f.input :address, input_html: { class: "form-control" } %>
      <%= f.input :phone_number, input_html: { class: "form-control" } %>
      <%= f.input :category, collection: Restaurant::CATEGORIES, prompt: "Choose category", input_html: { class: "form-control" } %>
    </div>

    <%= f.button :submit, "Create", class: "btn btn-success mt-3" %>
  <% end %>
</div>
